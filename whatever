    kaoqin(20350, 1, 16)
    //赵体轩
    kaoqin(20258, 0, 7)
    kaoqin(20258, 10, 11)
    kaoqin(20258, 1, 16)
    //李红洁
    kaoqin(21945, 0, 7)
    kaoqin(21945, 10, 11)
    kaoqin(21945, 1, 16)
    //张秀明
    kaoqin(22314, 0, 7)
    kaoqin(22314, 10, 11)
    kaoqin(22314, 1, 16)
    //徐强
    kaoqin(21883, 0, 7)
    kaoqin(21883, 10, 11)
    kaoqin(21883, 1, 16)
    //陈帅帅
    kaoqin(22113, 0, 7)
    kaoqin(22113, 10, 11)
